<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.desafioshipp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OrderDescriptionActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activity.OrderValueActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activity.OrderConfirmedActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.NewCardCpfActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.NewCardCvvActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.NewCardValidityActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.NewCardNameActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.NewCardNumberActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activity.CardsActivity" />
        <activity android:name=".activity.OrderPaymentActivity" />

    </application>

</manifest>